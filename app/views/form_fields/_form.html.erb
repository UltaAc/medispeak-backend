<%= form_with(model: form_field.persisted? ? form_field : [@page, form_field] ) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :metadata %>
    <%= form.text_area :metadata, class: "form-control" %>
  </div>
  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>
    <% if form.object.new_record? %>
      <%= link_to t("cancel"), page_path(@page), class: "btn btn-white" %>
    <% else %>
      <%= link_to t("cancel"), form_field_path(@form_field), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
