<%= content_for :title, "Transcriptions" %>
<%= turbo_stream_from :transcriptions %>
<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <div>
      <h1 class="h3">Transcriptions</h1>
      <div class="text-sm font-medium">
        <span class="text-gray-500 dark:text-gray-300/75">Sort by:</span>
        <%= sortable @transcriptions, :created_at, "Created", class: "text-gray-700 dark:text-gray-300 mr-1" %>
      </div>
    </div>
  </div>
  <%= tag.div id: ("transcriptions" if first_page?), class: "space-y-8" do %>
    <%= render partial: "transcriptions/index", collection: @transcriptions, as: :transcription, cached: true %>
  <% end %>
  <% if @pagy.pages > 1 %>
    <div class="my-6 text-center">
      <%== pagy_nav(@pagy) %>
    </div>
  <% end %>
</div>
